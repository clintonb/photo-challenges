<div class="page-header">
  <h1>Sign In</h1>
</div>

<%= bootstrap_form_for(resource, style: :horizontal, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= f.email_field :email, :autofocus => true %>

  <%= f.password_field :password %>

  <% if devise_mapping.rememberable? -%>
    <%= f.form_group do %>
      <%= f.check_box :remember_me %>
    <% end %>
  <% end -%>

  <%= f.form_group do %>
    <%= f.submit 'Sign In' %>
  <% end %>

  <%= f.form_group do %>
    <%= render 'devise/shared/links' %>
  <% end %>

<% end %>


